<head>
  <title>Departments</title>
  <script src="/js/add_department.js"></script>
  <script src="/js/delete_department.js"></script>
  <script src="/js/update_department.js"></script>
</head>
<body onload="browseMain()">
  <header>
    <h1>Departments</h1>
  </header>
  <nav class="navbar">
    <a href="/">Home</a>
    <a href="departments">Departments</a>
    <a href="certifications">Certifications</a>
    <a href="employees">Employees</a>
    <a href="training_sessions">Training Sessions</a>
    <a href="employees_cert">Employee Certifications</a>
    <a href="employees_train">Employee Training Sessions</a>
  </nav>
  <main>
    <div id="browse">
      <button onClick="newDepartment()" class="btn">Add New Department</button>
      <table>
        <thead>
          <tr>
            <th>Action</th>
            <th class="hidden">ID</th>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td>
                <a
                  href="#"
                  onClick="updateDepartment(this)"
                  data-id={{this.deptID}}
                  data-name={{this.name}}
                  data-description="{{this.description}}"
                >Edit</a>
                |
                <a
                  href="#"
                  onClick="deleteDepartment(this)"
                  data-id={{this.deptID}}
                  data-name={{this.name}}
                  data-description="{{this.description}}"
                >Delete</a>
              </td>
              <td class="hidden">{{this.deptID}}</td>
              <td>{{this.name}}</td>
              <td>{{this.description}}</td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>

    <div id="insert" class="form-container" style="display:none;">
      <form id="add-department-form">
        <legend><strong>Add New Department</strong></legend>
        <label>Name: *<span></span><input type="text" id="input-name" name="name" required/></label>
        <label>Description: *<span></span>
          <input
            type="text"
            id="input-description"
            name="description"
            required
          /></label>
        <button type="submit">Submit</button>
        <button type="button" onClick="browseMain()">Cancel</button>
      </form>
    </div>

    <div id="update" class="form-container" style="display:none;">
      <form id="update-department-form">
        <legend><strong>Update Department</strong></legend>
        <input type="hidden" id="updateDeptID" name="id" />
        <label>Name: *<span></span>
          <input type="text" id="updateDeptName" name="name" required/></label>
        <label>Description: *<span></span>
          <input
            type="text"
            id="updateDeptDescription"
            name="description"
            required
          /></label>
        <input class='btn' type="submit" value="Update Department"></input>
        <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
      </form>
    </div>

    <div id="delete" class="form-container" style="display:none;">
      <form id="delete-department-form">
        <legend><strong>Delete Department</strong></legend>
        <label>Department: <input id="deleteDeptName" disabled/></label>
        <label>Description: <input id="deleteDeptDescription" disabled></input></label>
        <input type="hidden" name="departmentID" id="deleteDeptID"/>
        <input class='btn' type="submit" value="Delete Department"></input>
        <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
      </form>
    </div>
  </main>
</body>

    <script>
    function showForm(formId) {
        var forms = document.querySelectorAll('.form-container');
        forms.forEach(form => {
            form.style.display = 'none';  
        });
        var formToShow = document.getElementById(formId);
        if (formToShow) {
            formToShow.style.display = 'block';  
        }
    }

    function hideForm() {
        var forms = document.querySelectorAll('.form-container');
        forms.forEach(form => {
            form.style.display = 'none';
        });
    }

    function updateCertification(element) {
        var id = element.getAttribute('data-id');
        var employeeID = element.getAttribute('data-employeeID');
        var certID = element.getAttribute('data-certID');

        document.getElementById('updateCertID').value = id;
        document.getElementById('updateEmployeeID').value = employeeID;
        document.getElementById('updateCertificationID').value = certID;

        showForm('update');
    }

    function deleteCertification(element) {
        var id = element.getAttribute('data-id');
        var employeeID = element.getAttribute('data-employeeID');
        var certID = element.getAttribute('data-certID');

        document.getElementById('deleteEmployeeID').textContent = employeeID;
        document.getElementById('deleteCertificationID').textContent = certID;
        document.getElementById('deleteCertID').value = id;
        
        showForm('delete');
    }


    function addCertification() {

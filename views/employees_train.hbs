        function showForm(formId) {
            var forms = ['insert', 'update', 'delete'];
            forms.forEach(function(form) {
                document.getElementById(form).style.display = (form === formId) ? 'block' : 'none';
            });
        }

        function updateTrainingSession(element) {
            var employeeID = element.getAttribute('data-employee-id');
            var trainingID = element.getAttribute('data-training-id');

            document.getElementById('updateTrainingSessionEmployeeID').value = employeeID;
            document.getElementById('updateTrainingSessionTrainingID').value = trainingID;

            showForm('update');
        }

        function deleteTrainingSession(element) {
            var employeeID = element.getAttribute('data-employee-id');
            var trainingID = element.getAttribute('data-training-id');

            document.getElementById('deleteTrainingSessionEmployeeID').textContent = employeeID;
            document.getElementById('deleteTrainingSessionTrainingID').textContent = trainingID;

            showForm('delete');
        }

        function addTrainingSession() {

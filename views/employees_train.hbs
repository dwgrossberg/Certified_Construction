<head>
  <title>Employee Training Sessions</title>
  <script src="/js/add_employee_training.js"></script>
  <script src="/js/delete_employee_training.js"></script>
  <script src="/js/update_employee_training.js"></script>
</head>
<header>
  <h1>Employee Training Sessions</h1>
</header>
<nav class="navbar">
  <a href="/">Home</a>
  <a href="departments">Departments</a>
  <a href="certifications">Certifications</a>
  <a href="employees">Employees</a>
  <a href="training_sessions">Training Sessions</a>
  <a href="employees_cert">Employee Certifications</a>
  <a href="employees_train">Employee Training Sessions</a>
</nav>
<main>
  <div id="browse">
    <button onClick="addEmployeeTrainingSession()" class="btn">Add New
      Employee Training</button>
    <table>
      <thead>
        <tr>
          <th>Action</th>
          <th class="hidden">ID</th>
          <th>Employee</th>
          <th>Training <em style="font-size: .75rem">(Date and Certification)</em></th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>
              <a
                href="#"
                onClick="updateEmployeeTrainingSession(this)"
                data-employeeTrainingID={{this.employeeTrainingID}}
                data-employeeID={{this.employeeID}}
                data-employeeName="{{this.fName}} {{this.lName}}"
                data-trainingID={{this.trainingID}}
              >Edit</a>
              |
              <a
                href="#"
                onClick="deleteEmployeeTrainingSession(this)"
                data-employeeTrainingID={{this.employeeTrainingID}}
                data-employeeID={{this.employeeID}}
                data-employeeName="{{this.fName}} {{this.lName}}"
                data-trainingID={{this.trainingID}}
                data-trainingName="{{this.date}} | {{this.certName}}"
              >Delete</a>
            </td>
            <td class="hidden">{{this.employeeTrainingID}}</td>
            <td>{{this.fName}} {{this.lName}}</td>
            <td>{{this.date}} | {{this.certName}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div id="insert" class="form-container" style="display:none;">
    <form id="add-employee-training-form">
      <legend><strong>Add New Employee Training Session</strong></legend>
      <div>
        <label>Employee:
          <select id="newEmployeeTrainingEmployeeID">
            {{#each employee}}
            <option value={{this.employeeID}}>{{this.fName}} {{this.lName}}</option>
            {{/each}}
          </select>
        </label>
      </div>
      <div>
        <label>Training:
          <select id="newEmployeeTrainingTrainingID">
            {{#each training}}
            <option value={{this.trainingID}}>{{this.date}} | {{this.certName}}</option>
            {{/each}}
          </select>
        </label>
      </div>
      <input class="btn" type="submit" value="Add Employee Training Session" />
      <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
    </form>
  </div>

  <div id="update" class="form-container" style="display:none;">
    <form id="updateEmployeeTrainingForm">
      <legend><strong>Update Employee Training Session</strong></legend>
      <input type="hidden" id="updateEmployeeTrainingSessionEmployeeTrainingID" disabled /></label>
      <div>
        <label>Employee:
          <select id="updateEmployeeTrainingEmployeeID">
            {{#each employee}}
            <option value={{this.employeeID}}>{{this.fName}} {{this.lName}}</option>
            {{/each}}
          </select>
        </label>
      </div>
      <div>
        <label>Training:
          <select id="updateEmployeeTrainingTrainingID">
            {{#each training}}
            <option value={{this.trainingID}}>{{this.date}} | {{this.certName}}</option>
            {{/each}}
          </select>
        </label>
      </div>
      <input class="btn" type="submit" value="Update Employee Training Session" />
      <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
    </form>
  </div>

  <div id="delete" class="form-container" style="display:none;">
    <form id="deleteEmployeeTrainingForm">
      <legend><strong>Delete Employee Training Session</strong></legend>
      <input type="hidden" id="deleteEmployeeTrainingSessionEmployeeTrainingID" disabled /></label>
      <label>Employee:
        <input type="text" id="deleteEmployeeTrainingSessionEmployeeID" disabled /></label>
      <label>Training:
        <input type="text" id="deleteEmployeeTrainingSessionTrainingID" disabled /><label/>
      <input class="btn" type="submit" value="Delete Employee Training Session" />
      <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
    </form>
  </div>

</main>


<head>
  <title>Training Sessions</title>
  <script src="/js/add_training.js"></script>
  <script src="/js/delete_training.js"></script>
  <script src="/js/update_training.js"></script> 
</head>
<header>
  <h1>Training Sessions</h1>
</header>
<nav class="navbar">
  <a href="/">Home</a>
  <a href="departments">Departments</a>
  <a href="certifications">Certifications</a>
  <a href="employees">Employees</a>
  <a href="training_sessions">Training Sessions</a>
  <a href="employees_cert">Employee Certifications</a>
  <a href="employees_train">Employee Training Sessions</a>
</nav>
<main>
  <div id="browse">
    <button onClick="newTrainingSession()" class="btn">Add New Training Session</button>
    <table>
      <thead>
        <tr>
          <th>Action</th>
          <th class="hidden">ID</th>
          <th>Date</th>
          <th class="thinColumn">Location</th>
          <th>Description</th>
          <th>Certification</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>
              <a
                href="#"
                onClick="updateTrainingSession(this)"
                data-id={{this.trainingID}}
                data-date="{{this.date}}"
                data-location="{{this.location}}"
                data-description="{{this.description}}"
                data-certID="{{this.certID}}"
              >Edit</a>
              |
              <a
                href="#"
                onClick="deleteTrainingSession(this)"
                data-id={{this.trainingID}}
                data-date="{{this.date}}"
                data-location="{{this.location}}"
                data-description="{{this.description}}"
                data-certName="{{this.name}}"
              >Delete</a>
            </td>
            <td class="hidden">{{this.trainingID}}</td>
            <td>{{this.date}}</td>
            <td>{{this.location}}</td>
            <td>{{this.description}}</td>
            <td>{{this.name}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div id="insert" class="form-container" style="display:none;">
    <form id="add-training-form">
      <legend><strong>Add New Training Session</strong></legend>
      <label>Date: <input type="date" id="newTrainingDate" class="required" required/></label>
      <label>Location: <input type="text" id="newTrainingLocation" class="required" required/></label>
      <label>Description: <input type="text" id="newTrainingDescription" class="required" required/></label>
      <label>Certification:
        <select id="newTrainingCert">
          {{#each cert}}
          <option value="{{this.certID}}">{{this.name}}</option>
          {{/each}}
        </select>
      </label>
      <input class="btn" type="submit" value="Add Training Session" />
      <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
    </form>
  </div>

  <div id="update" class="form-container" style="display:none;">
    <form id="update-training-form">
      <legend><strong>Update Training Session</strong></legend>
      <input type="hidden" id="updateTrainingID" class="required" required/>
      <label>Date: <input type="date" id="updateTrainingDate" class="required" required/></label>
      <label>Location: <input type="text" id="updateTrainingLocation" class="required" required/></label>
      <label>Description: <input type="text" id="updateTrainingDescription" class="required" required/></label>
      <label>Certification:
        <select id="updateTrainingCert">
          {{#each cert}}
          <option value="{{this.certID}}">{{this.name}}</option>
          {{/each}}
        </select>
      </label>
      <input class="btn" type="submit" value="Update Training Session" />
      <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
    </form>
  </div>

  <div id="delete" class="form-container" style="display:none;">
    <form id="delete-training-form">
      <legend><strong>Delete Training Session</strong></legend>
      <input type="hidden" id="deleteTrainingID" disabled />
      <label>Date: <input type="date" id="deleteTrainingDate" disabled /></label>
      <label>Location: <input type="text" id="deleteTrainingLocation" disabled /></label>
      <label>Description: <input type="text" id="deleteTrainingDescription" disabled /></label>
      <label>Certification: <input type="text" id="deleteTrainingCert" disabled /></label>
      <input class="btn" type="submit" value="Delete Training Session" />
      <input class="btn" type="button" value="Cancel" onClick="browseMain()" />
    </form>
  </div>
</main>

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Training Sessions</title>
  <link rel="stylesheet" type="text/css" href="/css/index.css" />
  <script src="/js/index.js"></script>
  <script src="/js/add_training.js"></script>
  <script src="/js/delete_training.js"></script>
  <script src="/js/update_training.js"></script> 
</head>
<body onload="browseMain()">
  <header>
    <h1>Training Sessions</h1>
  </header>
  <nav class="navbar">
    <a href="/">Home</a>
    <a href="departments">Departments</a>
    <a href="certifications">Certifications</a>
    <a href="employees">Employees</a>
    <a href="training_sessions">Training Sessions</a>
    <a href="employees_cert">Employee Certifications</a>
    <a href="employees_train">Employee Training Sessions</a>
  </nav>
  <main>
    <div id="browse">
      <button onClick="newTrainingSession()" class="btn">Add New Training Session</button>
      <table>
        <thead>
          <tr>
            <th>Action</th>
            <th class="hidden">ID</th>
            <th>Date</th>
            <th class="thinColumn">Location</th>
            <th>Description</th>
            <th>Certification</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td>
                <a
                  href="#"
                  onClick="updateTrainingSession(this)"
                  data-id={{this.trainingID}}
                  data-date="{{this.date}}"
                  data-location="{{this.location}}"
                  data-description="{{this.description}}"
                  data-certid="{{this.certID}}"
                >Edit</a>
                |
                <a
                  href="#"
                  onClick="deleteTrainingSession(this)"
                  data-id={{this.trainingID}}
                  data-date="{{this.date}}"
                  data-location="{{this.location}}"
                  data-description="{{this.description}}"
                  data-cert="{{this.name}}"
                >Delete</a>
              </td>
              <td class="hidden">{{this.trainingID}}</td>
              <td>{{this.date}}</td>
              <td>{{this.location}}</td>
              <td>{{this.description}}</td>
              <td>{{this.name}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div id="insert" class="form-container" style="display:none;">
      <form id="add-training-form">
        <legend>Add New Training Session</legend>
        <label>Date: <input type="date" id="newTrainingDate" /></label>
        <label>Location: <input type="text" id="newTrainingLocation" /></label>
        <label>Description: <input type="text" id="newTrainingDescription" /></label>
        <label>Certification:
          <select id="newTrainingCert">
            {{#each cert}}
            <option value="{{this.certID}}">{{this.name}}</option>
            {{/each}}
          </select>
        </label>
        <button type="submit">Submit</button>
        <button type="button" onClick="browseMain()">Cancel</button>
      </form>
    </div>

    <div id="update" class="form-container" style="display:none;">
      <form id="update-training-form">
        <legend>Update Training Session</legend>
        <input type="hidden" id="updateTrainingID" />
        <label>Date: <input type="date" id="updateTrainingDate" /></label>
        <label>Location: <input type="text" id="updateTrainingLocation" /></label>
        <label>Description: <input type="text" id="updateTrainingDescription" /></label>
        <label>Certification:
          <select id="updateTrainingCert">
            {{#each cert}}
            <option value="{{this.certID}}">{{this.name}}</option>
            {{/each}}
          </select>
        </label>
        <button type="submit">Update</button>
        <button type="button" onClick="browseMain()">Cancel</button>
      </form>
    </div>

    <div id="delete" class="form-container" style="display:none;">
      <form id="delete-training-form">
        <legend>Delete Training Session</legend>
        <p>Are you sure you want to delete this training session?</p>
        <p>Training ID: <input id="deleteTrainingID" disabled /></p>
        <p>Date: <input type="date" id="deleteTrainingDate" disabled /></p>
        <p>Location: <input id="deleteTrainingLocation" disabled /></p>
        <p>Description: <input id="deleteTrainingDescription" disabled /></p>
        <p>Certification: <input id="deleteTrainingCert" disabled /></p>
        <button type="submit">Delete</button>
        <button type="button" onClick="browseMain()">Cancel</button>
      </form>
    </div>
  </main>
</body>

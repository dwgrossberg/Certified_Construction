    <script>
        function showForm(formId) {
            var forms = ['insert', 'update', 'delete'];
            forms.forEach(function(form) {
                document.getElementById(form).style.display = (form === formId) ? 'block' : 'none';
            });
        }

        function updateTrainingSession(element) {
            var id = element.getAttribute('data-id');
            var date = element.getAttribute('data-date');
            var location = element.getAttribute('data-location');
            var description = element.getAttribute('data-description');
            var certID = element.getAttribute('data-certID');

            document.getElementById('updateTrainingID').value = id;
            document.getElementById('updateTrainingDate').value = date;
            document.getElementById('updateTrainingLocation').value = location;
            document.getElementById('updateTrainingDescription').value = description;
            document.getElementById('updateTrainingCertID').value = certID;

            showForm('update');
        }

        function deleteTrainingSession(element) {
            var id = element.getAttribute('data-id');
            var date = element.getAttribute('data-date');
            var location = element.getAttribute('data-location');
            var description = element.getAttribute('data-description');
            var certID = element.getAttribute('data-certID');

            document.getElementById('deleteTrainingID').textContent = id;
            document.getElementById('deleteTrainingDate').textContent = date;
            document.getElementById('deleteTrainingLocation').textContent = location;
            document.getElementById('deleteTrainingDescription').textContent = description;
            document.getElementById('deleteTrainingCertID').textContent = certID;

            showForm('delete');
        }

        function addTrainingSession() {
            showForm('insert');
        }
    </script>

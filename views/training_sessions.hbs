<header>
  <h1>Training Sessions</h1>
</header>
<nav class="navbar">
  <a href="/">Home</a>
  <a href="departments">Departments</a>
  <a href="certifications">Certifications</a>
  <a href="employees">Employees</a>
  <a href="training_sessions">Training Sessions</a>
  <a href="employees_cert">Employee Certifications</a>
  <a href="employees_train">Employee Training Sessions</a>
</nav>
<main>
  <div id="browse">
    <button onClick="newTrainingSession()" class="btn">Add New Training
      Session</button>
    <table>
      <thead>
        <tr>
          <th>Action</th>
          <th class="hidden">ID</th>
          <th>Date</th>
          <th class="thinColumn">Location</th>
          <th>Description</th>
          <th>Certification</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>
              <a
                href="#"
                onClick="updateTrainingSession(this)"
                data-id={{this.trainingID}}
                data-date="{{this.date}}"
                data-location={{this.location}}
                data-description="{{this.description}}"
                data-cert="{{this.name}}"
              >Edit</a>
              |
              <a
                href="#"
                onClick="deleteTrainingSession(this)"
                data-id={{this.trainingID}}
                data-date="{{this.date}}"
                data-location={{this.location}}
                data-description="{{this.description}}"
                data-cert="{{this.name}}"
              >Delete</a>
            </td>
            <td class="hidden">{{this.trainingID}}</td>
            <td>{{this.date}}</td>
            <td>{{this.location}}</td>
            <td>{{this.description}}</td>
            <td>{{this.name}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div id="insert" class="form-container" style="display:none;">
    <form id="newTraining">
      <legend>Add New Training Session</legend>
      <label>Date: <input type="date" id="newTrainingDate" /></label>
      <label>Location:
        <input type="text" id="newTrainingLocation" /></label>
      <label>Description:
        <input type="text" id="newTrainingDescription" /></label>
      <div>
        <label>Certification:
          <select id="newTrainingCert">
            {{#each cert}}
            <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </select>
        </label>
      </div>
      <button type="submit">Submit</button>
      <button type="button" onClick="browseMain()">Cancel</button>
    </form>
  </div>

  <div id="update" class="form-container" style="display:none;">
    <form id="updateTraining">
      <legend>Update Training Session</legend>
      <input type="hidden" id="updateTrainingID" />
      <label>Date: <input type="date" id="updateTrainingDate" /></label>
      <label>Location:
        <input type="text" id="updateTrainingLocation" /></label>
      <label>Description:
        <input type="text" id="updateTrainingDescription" /></label>
      <div>
        <label>Certification:
          <select id="updateTrainingCert">
            {{#each cert}}
            <option value="{{this.name}}">{{this.name}}</option>
            {{/each}}
          </select>
        </label>
      </div>
      <button type="submit">Update</button>
      <button type="button" onClick="browseMain()">Cancel</button>
    </form>
  </div>

  <div id="delete" class="form-container" style="display:none;">
    <form id="deleteTraining">
      <legend>Delete Training Session</legend>
      <p>Are you sure you want to delete this training session?</p>
      <p>Training ID: <input id="deleteTrainingID" disabled /></p>
      <p>Date: <input type="date" id="deleteTrainingDate" disabled /></p>
      <p>Location: <input id="deleteTrainingLocation" disabled /></p>
      <p>Description: <input id="deleteTrainingDescription" disabled /></p>
      <p>Certification: <input id="deleteTrainingCert" disabled /></p>
      <button type="submit">Delete</button>
      <button type="button" onClick="browseMain()">Cancel</button>
    </form>
  </div>
</main>
